<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="2dp"
            android:src="@drawable/chairman"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/imgBackground"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txtHead"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@+id/imgBackground"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/txtBelow"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtHead"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgLove"
            android:tint="@color/appColor"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLove"
            app:layout_constraintStart_toEndOf="@+id/imgLove"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgComment"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgComment"
            android:tint="@color/blue"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            app:layout_constraintStart_toEndOf="@+id/txtLove"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtComment"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imgComment"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imgShare"
            android:tint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/txtComment"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            android:layout_marginLeft="25dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtShare"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/imgShare"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgBackground"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="8dp"/>
</LinearLayout>