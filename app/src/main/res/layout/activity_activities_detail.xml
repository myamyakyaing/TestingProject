<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ActivitiesDetailActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/comment"
            android:id="@+id/imgPresentationComment"
            android:tint="@color/white"
            android:background="#A1193E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgLike"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/favorite"
            android:id="@+id/imgLike"
            android:tint="@color/white"
            tools:ignore="MissingConstraints"
            android:background="#A0173D"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgPresentationComment"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/chairman"
            android:id="@+id/imgPresentation"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/backarrow"
            android:id="@+id/btnPresentation"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imgPresentation"
            app:layout_constraintStart_toStartOf="@+id/imgPresentation" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:tint="#D8D5D5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPresentationName"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imgPresentation"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgPresentation"/>
    <ScrollView
            android:id="@+id/scrollPresentstion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPresentation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
    >
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPresentationBody"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>