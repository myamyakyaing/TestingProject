<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.StudentProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/side_nav_bar"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/backarrow"
                android:id="@+id/std_btn_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                app:cardCornerRadius="50dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:id="@+id/cardView"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/profile"
                    android:layout_gravity="center"
                    android:id="@+id/profileStudent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="250dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                android:id="@+id/linearLayout6">


            <TextView
                    android:id="@+id/txtStdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:hint="@string/nav_header_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/nav_header_subtitle"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/txtStdTrack"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/work"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdProfession"
                    android:hint="Profssion"
                    android:fontFamily="@font/style_american"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:background="@drawable/drawer_item_bg"
                    android:textColor="@color/appColor"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/office"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdCompany"
                    android:hint="Company Name"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:fontFamily="@font/style_american"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdAddress"
                    android:hint="Present Address"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:fontFamily="@font/style_american"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/birthday"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdDob"
                    android:hint="Date of Birth"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/style_american"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:fontFamily="@font/style_american"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/d_email"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdEmail"
                    android:hint="Student Email"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:fontFamily="@font/style_american"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>