<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.StudentProfileActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/side_nav_bar"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/backarrow"
                android:id="@+id/std_btn_back"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/side_nav_bar"
                android:paddingBottom="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="100dp">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/profile"
                        android:layout_gravity="center"
                        android:id="@+id/profileStudent"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/txtStdName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:textSize="20dp"
                        android:hint="@string/nav_header_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/nav_header_subtitle"
                        android:textSize="20dp"
                        android:id="@+id/txtStdTrack"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/work"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdProfession"
                    android:hint="Profssion"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:background="@drawable/drawer_item_bg"
                    android:textColor="@color/appColor"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/office"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdCompany"
                    android:hint="Company Name"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdAddress"
                    android:hint="Present Address"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/birthday"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdDob"
                    android:hint="Date of Birth"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/d_email"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStdEmail"
                    android:hint="Student Email"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>