<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TeacherProfileActivity">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/below"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/above"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/backarrow"
            android:id="@+id/img_btn_back"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"/>
    <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            app:cardCornerRadius="50dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.605"
            tools:ignore="MissingConstraints">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/profile"
                android:id="@+id/imgTeacherProfile"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/txtTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:hint="@string/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/work"/>
            <TextView
                    android:id="@+id/txtTechProfession"
                    android:hint="Profession"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:background="@drawable/drawer_item_bg"
                    android:textColor="@color/appColor"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/address"/>
            <TextView
                    android:id="@+id/txtTechAddress"
                    android:hint="Address"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/birthday"/>
            <TextView
                    android:id="@+id/txtTechDob"
                    android:hint="Date of Birth"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"/>
            <TextView
                    android:id="@+id/txtTechPhone"
                    android:hint="Phone Number"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/d_email"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtTechEmail"
                    android:hint="Email"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="40dp"/>

        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/bottom_bar"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/circle"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/messages"
            android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            android:layout_marginBottom="14dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>