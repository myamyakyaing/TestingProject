<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:background="@drawable/student_shape"
        app:behavior_hideable="true"
        android:clickable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_height="400dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
            android:text="Course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" android:textSize="28sp"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="Done"
            android:textColor="@color/appColor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/done_press"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:layout_constraintTop_toTopOf="parent"/>
        <CheckBox
                android:text="Android Studio"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/checkBox"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
        <CheckBox
                android:text="PHP"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/checkBox2"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/checkBox"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
        <CheckBox
                android:text="Java"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/checkBox3"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/checkBox2"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:textSize="18sp" android:textColor="#FFFFFF"/>
        <TextView
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                android:layout_marginTop="20dp"
                android:textSize="28sp"
                android:textColor="#E2E2E2"/>
        <CheckBox
                android:text="Male"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/checkBox4"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textColor="#FFFFFF" android:textSize="18sp"/>
        <CheckBox
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/checkBox5"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/checkBox4"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textColor="#ECECEC"
                android:textSize="18sp"/>
        <TextView
                android:text="Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/checkBox4"
                android:layout_marginTop="20dp"
                android:textSize="28dp"
                android:textColor="#FFFFFF"/>
        <CheckBox
                android:text="Android Studio"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/checkBox6"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textColor="#FFFFFF" android:textSize="18sp"/>
        <CheckBox
                android:text="PHP"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/checkBox7"
                android:buttonTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/checkBox6"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textColor="#FFFFFF" android:textSize="18sp"/>
        <CheckBox
                android:text="Java"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/white"
                android:id="@+id/checkBox8"
                app:layout_constraintStart_toEndOf="@+id/checkBox7"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:textColor="#FFFFFF" android:textSize="18sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>