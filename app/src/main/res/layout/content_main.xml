<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".activities.MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/group"
            android:id="@+id/imgGroup" android:scaleType="centerCrop"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/linCourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/c"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/course"
                        android:id="@+id/imgCourse"/>
                <TextView
                        android:id="@+id/course"
                        android:layout_width="wrap_content"
                        android:text="Course"
                        android:textSize="20dp"
                        android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/linStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/s"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="3">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/student"
                        android:id="@+id/imgStudent"/>
                <TextView
                        android:id="@+id/student"
                        android:layout_width="wrap_content"
                        android:text="Student"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/linTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/t"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="3">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/teacher"
                        android:id="@+id/imgTeacher"/>
                <TextView
                        android:id="@+id/teacher"
                        android:layout_width="wrap_content"
                        android:text="Teacher"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/linActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/a"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/event"
                        android:id="@+id/imgActivity"/>
                <TextView
                        android:id="@+id/acticity"
                        android:layout_width="wrap_content"
                        android:text="Activities"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>