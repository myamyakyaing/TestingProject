<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DetailProfileActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/side_nav_bar"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/backarrow"
                android:id="@+id/img_btn_back"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/side_nav_bar"
                android:paddingBottom="50dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="18dp"
                    android:layout_height="100dp">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/profile"
                    android:layout_gravity="center"
                    android:id="@+id/imageView"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content">


                <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:textSize="20dp"
                        android:text="@string/nav_header_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nav_header_subtitle"
                        android:textSize="20dp"
                        android:id="@+id/txtTrack"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/work"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName1"
                    android:text="Android Developer"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/office"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName2"
                    android:text="Ace Plus Solution Co.ltd"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/address"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName3"
                    android:text="Pantanaw St, Sangaung"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/birthday"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName4"
                    android:text="17/12/1996"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="50dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName5"
                    android:text="+95951104661"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/imgStudent6"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:src="@drawable/d_email"
                    android:layout_marginLeft="0dp"/>
            <TextView
                    android:id="@+id/txtStudentName6"
                    android:text="myamyakyaink.mmk1996@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/appColor"
                    android:background="@drawable/drawer_item_bg"
                    android:textSize="20dp"
                    android:layout_height="70dp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>